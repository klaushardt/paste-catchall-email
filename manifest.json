{
   "background": {
      "persistent": true,
      "scripts": [ "background.js" ]
   },
   "content_scripts": [ {
      "all_frames": true,
      "js": [ "content.js" ],
      "matches": [ "http://*/*", "https://*/*" ],
      "run_at": "document_end"
   } ],
   "description": "Paste CatchAll-Email for Chrome",
   "icons": {
      "192": "icon-192x192.png",
      "144": "icon-144x144.png",
      "96": "icon-96x96.png",
      "70": "icon-70x70.png",
      "32": "icon-32x32.png",
      "16": "icon-16x16.png"
   },
   "manifest_version": 2,
   "name": "Paste CatchAll-Email",
   "options_page": "options.html",
   "permissions": [ "contextMenus", "tabs"],
   "version": "1.0.0"
}
